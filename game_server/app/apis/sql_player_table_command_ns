
from flask_restx import Api, Resource, fields, Namespace




# ---------------------- Name Spaces ---------------------- #
player_sql_table_commands_ns = Namespace('player_sql_table-commands', description='Commands that effect player table')


# ---------------------- Resources ---------------------- #
class RegisterUsers(Resource):
    def post(self, display_name:str, social_media_platform_display_name:str, social_media_platform:str, card_types:str):
        '''Registers a user or bot into an existing game'''
    
    
# ---------------------- Building Resources ---------------------- #
player_sql_table_commands_ns.add_resource(RegisterUsers, '/register-user')
